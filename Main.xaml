<Window
    x:Class="Event_App.Main"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Event_App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title=""
    Width="400"
    Height="250"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <TextBlock HorizontalAlignment="Center" Text="Welcome to the Event App"/>
        <TextBlock HorizontalAlignment="Center" Text="where you can view events in your area."/>
        <Button
            Margin="0,50,0,0"
            Width="200"
            Click="Login_Button"
            Content="Login" />
        <Button
            Margin="0,20,0,0"
            Width="200"
            Click="Register_Button"
            Content="Register" />
    </StackPanel>
</Window>

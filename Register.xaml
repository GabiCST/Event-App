<Window
    x:Class="Event_App.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Event_App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Register"
    Width="425"
    Height="500"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Margin="20"
                VerticalAlignment="Center"
                Content="Username:" />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Width="200"
                Height="25" />
            <Label
                Grid.Row="1"
                Grid.Column="0"
                Margin="20"
                VerticalAlignment="Center"
                Content="Email:" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Width="200"
                Height="25" />
            <Label
                Grid.Row="2"
                Grid.Column="0"
                Margin="20"
                VerticalAlignment="Center"
                Content="Password:" />
            <PasswordBox
                Grid.Row="2"
                Grid.Column="1"
                Width="200"
                Height="25" />

            <Label
                Grid.Row="3"
                Grid.Column="0"
                Margin="20"
                VerticalAlignment="Center"
                Content="Confirm Password:" />
            <PasswordBox
                Grid.Row="3"
                Grid.Column="1"
                Width="200"
                Height="25" />
        </Grid>
        <StackPanel>
            <Button
                x:Name="RegisterAc"
                Grid.Row="4"
                Grid.Column="1"
                Height="50"
                Margin="25"
                Click="RegisterButton_Click"
                Content="Create account" />
            <TextBlock Margin="0,20,0,0" HorizontalAlignment="Center">Already have an account?
                <Hyperlink Click="LoginLink_Click">Login here.</Hyperlink>
            </TextBlock>
        </StackPanel>
    </StackPanel>
</Window>

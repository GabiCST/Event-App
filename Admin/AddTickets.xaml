<Window
    x:Class="Event_App.AddTickets"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Event_App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="AddTickets"
    Width="500"
    Height="450"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label
                Name="Type"
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Event type"
                FontSize="30" />
            <TextBox
                Name="TypeTextBox"
                Grid.Row="0"
                Grid.Column="1"
                Width="200"
                Height="25"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            <Label
                Name="Event"
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Event"
                FontSize="30" />
            <TextBox
                Name="EventTextBox"
                Grid.Row="1"
                Grid.Column="1"
                Width="200"
                Height="25"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            <Label
                Name="Date"
                Grid.Row="2"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Date"
                FontSize="30" />
            <DatePicker
                Name="DateTextBox"
                Grid.Row="2"
                Grid.Column="1"
                Width="200"
                Height="25"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            <Label
                Name="Time"
                Grid.Row="3"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Time"
                FontSize="30" />
            <StackPanel
                Grid.Row="3"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <xctk:IntegerUpDown
                    Name="HourTime"
                    Width="40"
                    Height="25"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Maximum="23"
                    Minimum="0"
                    Value="0" />
                <xctk:IntegerUpDown
                    Name="MinutesTime"
                    Width="40"
                    Height="25"
                    Margin="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Maximum="59"
                    Minimum="0"
                    Value="0" />
            </StackPanel>
            <Label
                Name="TicketNumberLabel"
                Grid.Row="4"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Ticket number"
                FontSize="30" />
            <xctk:IntegerUpDown
                Name="TicketNumber"
                Grid.Row="4"
                Grid.Column="1"
                Width="40"
                Height="25"
                Margin="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Maximum="9999"
                Minimum="0"
                Value="0" />

        </Grid>

        <StackPanel Orientation="Horizontal">
            <Button
                Width="100"
                Height="30"
                Margin="30,50,0,0"
                HorizontalAlignment="Center"
                Click="Back_Button"
                Content="Back"
                FontSize="16" />
            <Button
                Width="200"
                Height="30"
                Margin="145,50,0,0"
                HorizontalAlignment="Center"
                Click="Add_Ticket"
                Content="Add"
                FontSize="16" />
        </StackPanel>
    </StackPanel>
</Window>

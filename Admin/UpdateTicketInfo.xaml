<Window
    x:Class="Event_App.UpdateTicketInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Event_App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Update ticket info"
    Width="400"
    Height="300"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175" />
            <ColumnDefinition Width="175" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="10,5,0,0"
            Text="Event type:" />
        <TextBox
            x:Name="EventTypeBox"
            Grid.Row="0"
            Grid.Column="1"
            Margin="20,5,0,0" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="10,5,0,0"
            Text="Event:" />
        <TextBox
            x:Name="EventBox"
            Grid.Row="1"
            Grid.Column="1"
            Margin="20,5,0,0" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="10,5,0,0"
            Text="Location:" />
        <TextBox
            x:Name="LocationBox"
            Grid.Row="2"
            Grid.Column="1"
            Margin="20,5,0,0" />
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="10,5,0,0"
            Text="Date:" />
        <TextBox
            x:Name="DateBox"
            Grid.Row="3"
            Grid.Column="1"
            Margin="20,5,0,0" />
        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Margin="10,5,0,0"
            Text="Ticket type:" />
        <TextBox
            x:Name="TicketTypeBox"
            Grid.Row="4"
            Grid.Column="1"
            Margin="20,5,0,0" />
        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Margin="10,5,0,0"
            Text="Price:" />
        <TextBox
            x:Name="PriceBox"
            Grid.Row="5"
            Grid.Column="1"
            Margin="20,5,0,0" />

        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Margin="10,5,0,0"
            Text="Ticket number:" />
        <TextBox
            x:Name="TicketNumberBox"
            Grid.Row="6"
            Grid.Column="1"
            Margin="20,5,0,0" />

        <Button
            Grid.Row="7"
            Grid.Column="0"
            Width="100"
            Height="20"
            Margin="10,10,0,0"
            Click="Save_Button"
            Content="Save" />
        <Button
            Grid.Row="7"
            Grid.Column="1"
            Width="100"
            Height="20"
            Margin="10,10,0,0"
            Click="Cancel_button"
            Content="Cancel" />
    </Grid>
</Window>

<Window
    x:Class="Event_App.AdminWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Event_App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AdminWindow"
    Width="800"
    Height="450"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Row="0"
                Grid.Column="0"
                Width="290"
                Height="50"
                Margin="10"
                Click="AddTickets_Button"
                Content="Add tickets"
                FontSize="20" />
            <Button
                Grid.Row="1"
                Grid.Column="0"
                Width="290"
                Height="50"
                Margin="10"
                Click="AvailableTickets_Button"
                Content="Check available tickets"
                FontSize="20" />
            <Button
                Grid.Row="2"
                Grid.Column="0"
                Width="350"
                Height="50"
                Margin="10"
                Click="ViewCreatedAccounts_Button"
                Content="View created accounts"
                FontSize="20" />
            <Button
                Grid.Row="3"
                Grid.Column="0"
                Width="300"
                Height="30"
                Margin="10"
                Click="Back_Button"
                Content="Back"
                FontSize="20" />
            <Button
                Grid.Row="4"
                Grid.Column="0"
                Width="300"
                Height="30"
                Margin="10"
                Click="LogOut_Button"
                Content="Log Out"
                FontSize="20" />
        </Grid>
    </StackPanel>
</Window>

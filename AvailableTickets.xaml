<Window
    x:Class="Event_App.AvailableTickets"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Event_App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AvailableTickets"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="150" />
            </Grid.RowDefinitions>
            <Label
                Name="Type"
                Grid.Row="0"
                Margin="2,4,250,4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Event Type"
                FontSize="30" />
            <ComboBox
                Name="TypeComboBox"
                Grid.Row="0"
                Width="200"
                Height="25"
                Margin="20,10,-100,1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <ComboBoxItem Content="Films" />
                <ComboBoxItem Content="Music" />
                <ComboBoxItem Content="Art" />
                <ComboBoxItem Content="Theatre" />
                <ComboBoxItem Content="Sports" />
                <ComboBoxItem Content="Technology" />
            </ComboBox>
            <Label
                Name="Event"
                Grid.Row="1"
                Margin="2,4,250,4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Event"
                FontSize="30" />
            <ComboBox
                Name="EventComboBox"
                Grid.Row="1"
                Width="200"
                Height="25"
                Margin="20,10,-100,1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <ComboBoxItem Content="Event 1" />
                <ComboBoxItem Content="Event 2" />
                <ComboBoxItem Content="Event 3" />
            </ComboBox>
            <Label
                Name="Date"
                Grid.Row="2"
                Margin="2,4,250,4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Date"
                FontSize="30" />
            <ComboBox
                Name="DateComboBox"
                Grid.Row="2"
                Width="200"
                Height="25"
                Margin="20,10,-100,1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <ComboBoxItem Content="Date 1" />
                <ComboBoxItem Content="Date 2" />
                <ComboBoxItem Content="Date 3" />
            </ComboBox>
            <Label
                Name="Time"
                Grid.Row="3"
                Margin="2,4,250,4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Time"
                FontSize="30" />
            <ComboBox
                Name="TimeComboBox"
                Grid.Row="3"
                Width="200"
                Height="25"
                Margin="20,10,-100,1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <ComboBoxItem Content="Time 1" />
                <ComboBoxItem Content="Time 2" />
                <ComboBoxItem Content="Time 3" />
            </ComboBox>
            <Label
                Name="TicketType"
                Grid.Row="4"
                Margin="2,4,250,4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Ticket Type"
                FontSize="30" />
            <ComboBox
                Name="TicketTypeComboBox"
                Grid.Row="4"
                Width="200"
                Height="25"
                Margin="20,10,-100,1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <ComboBoxItem Content="Standard" />
                <ComboBoxItem Content="Premium" />
                <ComboBoxItem Content="VIP" />
            </ComboBox>
            <Button
                Grid.Row="6"
                Width="100"
                Height="30"
                Margin="10,4,170,4"
                HorizontalAlignment="Center"
                Content="Back"
                FontSize="16" />
            <Button
                Grid.Row="6"
                Width="200"
                Height="30"
                Margin="170,4,10,4"
                HorizontalAlignment="Center"
                Content="Show Available Tickets"
                FontSize="16" />
        </Grid>
    </StackPanel>
</Window>

<Window
    x:Class="Event_App.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Event_App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Login"
    Width="400"
    Height="350"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>
            <Label
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Username or Email:"
                FontSize="20" />
            <TextBox
                x:Name="UserOrEmail"
                Grid.Row="0"
                Grid.Column="1"
                Width="150"
                Height="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            <Label
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Password:"
                FontSize="20" />

            <PasswordBox
                x:Name="Password"
                Grid.Row="1"
                Grid.Column="1"
                Width="150"
                Height="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
        </Grid>
        <StackPanel>
            <Button
                x:Name="LoginButton"
                Grid.Row="2"
                Grid.Column="0"
                Width="250"
                Height="30"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Click="Login_Button"
                Content="Login" />
            <TextBlock Margin="0,30,0,0" HorizontalAlignment="Center">
                <Hyperlink Click="Forgot_Password">Forgot Password?</Hyperlink>
            </TextBlock>
            <TextBlock Margin="0,40,0,0" HorizontalAlignment="Center">
                Don't have an account?<Hyperlink Click="Register_Button">Register here.</Hyperlink>
            </TextBlock>
        </StackPanel>

    </StackPanel>

</Window>

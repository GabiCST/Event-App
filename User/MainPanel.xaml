<Window
    x:Class="Event_App.MainPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Event_App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainPanel"
    Width="800"
    Height="450"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Row="0"
                Grid.Column="0"
                Width="300"
                Height="30"
                Margin="10"
                Click="Events_Button"
                Content="Available tickets for all events"
                FontSize="20" />
            <Button
                Grid.Row="2"
                Grid.Column="0"
                Width="300"
                Height="30"
                Margin="10"
                Click="Favorite_Button"
                Content="Favorite events"
                FontSize="20" />
            <Button
                Grid.Row="3"
                Grid.Column="0"
                Width="300"
                Height="30"
                Margin="10"
                Click="Purchased_Button"
                Content="View your purchased tickets"
                FontSize="20" />
            <Button
                x:Name="AdminPanelButton"
                Grid.Row="4"
                Width="150"
                Height="30"
                Click="AdminPanel_Button"
                Content="Admin Panel"
                FontSize="20" />
            <Button
                Grid.Row="5"
                Grid.Column="0"
                Width="150"
                Height="30"
                Margin="10"
                Click="LogOut_Button"
                Content="Log Out"
                FontSize="20" />

        </Grid>
    </StackPanel>
</Window>

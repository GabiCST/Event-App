<Window
    x:Class="Event_App.ViewPurchasedTickets"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Event_App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ViewPurchasedTickets"
    Width="800"
    Height="450"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Button
            Width="30"
            Height="20"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Back_Button"
            Content="Back" />
        <ScrollViewer Margin="0,35,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="EventsPanel" Orientation="Vertical" />
        </ScrollViewer>
    </Grid>
</Window>

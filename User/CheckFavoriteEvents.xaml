<Window
    x:Class="Event_App.CheckFavoriteEvents"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Event_App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CheckFavoriteEvents"
    Width="650"
    Height="450"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label
                Name="Favorite_events"
                Grid.Row="0"
                Margin="2,4,250,4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Favorite events"
                FontSize="30" />
            <ComboBox
                Name="TypeComboBox"
                Grid.Row="0"
                Width="200"
                Height="25"
                Margin="80,10,-100,1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <ComboBoxItem Content="Films" />
                <ComboBoxItem Content="Music" />
                <ComboBoxItem Content="Art" />
                <ComboBoxItem Content="Theatre" />
                <ComboBoxItem Content="Sports" />
                <ComboBoxItem Content="Technology" />
            </ComboBox>
            <Label
                Name="Event_date"
                Grid.Row="1"
                Margin="2,4,250,4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Event date"
                FontSize="30" />
            <ComboBox
                Name="EventDateComboBox"
                Grid.Row="1"
                Width="200"
                Height="25"
                Margin="20,10,-100,1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <ComboBoxItem Content="Date 1" />
                <ComboBoxItem Content="Date 2" />
                <ComboBoxItem Content="Date 3" />
            </ComboBox>
            <Label
                Name="Time"
                Grid.Row="2"
                Margin="2,4,250,4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Event time"
                FontSize="30" />
            <ComboBox
                Name="DateComboBox"
                Grid.Row="2"
                Width="200"
                Height="25"
                Margin="20,10,-100,1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <ComboBoxItem Content="Time 1" />
                <ComboBoxItem Content="Time 2" />
                <ComboBoxItem Content="Time 3" />
            </ComboBox>
            <Label
                Name="Ticket_type"
                Grid.Row="3"
                Margin="2,4,250,4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Ticket type"
                FontSize="30" />
            <ComboBox
                Name="TimeComboBox"
                Grid.Row="3"
                Width="200"
                Height="25"
                Margin="20,10,-100,1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <ComboBoxItem Content="Standard" />
                <ComboBoxItem Content="Premium" />
                <ComboBoxItem Content="VIP" />
            </ComboBox>
        </Grid>
        <Button
                Width="100"
                Height="30"
                Margin="10"
                Click="Back_Button"
                Content="Back"
                FontSize="20" />
    </StackPanel>
</Window>
<Window
    x:Class="Event_App.FavoriteEvents"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Event_App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FavoriteEvents"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel>
        <Label
            Name="Event_1"
            Margin="0,180,100,100"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Event type"
            FontSize="25" />
        <ComboBox
            Name="Event_1_ComboBox"
            Width="200"
            Height="25"
            Margin="50,-230,-200,1" />
        <Button
            Width="100"
            Height="50"
            Margin="10"
            HorizontalAlignment="Left"
            Content="Back"
            FontSize="20" />
        <Button
            Width="100"
            Height="50"
            Margin="1,-55,30,1"
            HorizontalAlignment="Right"
            Content="Submit"
            FontSize="20" />
        <Grid />
    </StackPanel>
</Window>
